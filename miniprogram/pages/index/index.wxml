</view>
<view class="chords-container">
  <view class="chord-button" hover-class="chord-button-hover">
    <text class="chord-name">Am</text>
    <text class="chord-level" hover-class="chord-level-hover">vi</text>
  </view>
  <view class="chord-button" hover-class="chord-button-hover">
    <text class="chord-name">E</text>
    <text class="chord-level">III</text>
  </view>
  <view class="chord-button" hover-class="chord-button-hover">
    <text class="chord-name">Bb</text>
    <text class="chord-level">VII</text>
  </view>
  <view class="chord-button" hover-class="chord-button-hover">
    <text class="chord-name">Cmaj7</text>
    <text class="chord-level">I7</text>
  </view>
</view>
<view class="play-panel-container">
  <view class="play-button-container">
    <button class="play-button" hover-class="play-button-hover" bindtap="onPlay">Play</button>
  </view>
  <view class="tempo-slider-container">
    <text class="tempo">BPM: {{tempo}}</text>
    <slider class="tempo-slider" min="70" max="200" block-size="24" block-color="#4b6373" bindchanging="onTempoChange" />
  </view>
</view>