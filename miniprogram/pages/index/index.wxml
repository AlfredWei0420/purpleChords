  <view id="d4s" class="black-key" hover-class="black-key-hover" bindtap="onKeyPress"></view>
  <view id="f4s" class="black-key" hover-class="black-key-hover" bindtap="onKeyPress"></view>
  <view id="g4s" class="black-key" hover-class="black-key-hover" bindtap="onKeyPress"></view>
  <view id="a4s" class="black-key" hover-class="black-key-hover" bindtap="onKeyPress"></view>
  <view id="c5s" class="black-key" hover-class="black-key-hover" bindtap="onKeyPress"></view>
